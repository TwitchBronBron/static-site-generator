{
  "name": "statigen",
  "version": "0.1.0",
  "description": "A static site generator that supports html, ejs, and markdown source files",
  "main": "dist/index.js",
  "keywords": [
    "static-site-generator",
    "staticSiteGenerator"
  ],
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "lint": "eslint \"src/**\"",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm run build && npm run lint && npm run test",
    "watch-template-default": "npm run build && node dist/cli.js --sourceDir templates/default --outDir .tmp/templates/default --watch"
  },
  "bin": {
    "static-site-generator": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "LICENSE.txt",
    "README.md"
  ],
  "author": "Bronley Plumb",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "debounce": "^1.2.1",
    "ejs": "^3.1.6",
    "ejs-lint": "^1.2.0",
    "empty-dir": "^2.0.0",
    "front-matter": "^4.0.2",
    "globby": "^11.0.3",
    "highlight.js": "^10.7.2",
    "latest-version": "^5.1.0",
    "live-server": "^1.2.1",
    "marked": "^2.0.3",
    "moment": "^2.29.1",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/debounce": "^1.2.0",
    "@types/ejs": "^3.0.6",
    "@types/finalhandler": "^1.1.0",
    "@types/fs-extra": "^9.0.11",
    "@types/live-server": "^1.2.0",
    "@types/marked": "^2.0.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/sinon": "^10.0.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.25.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
