{
  "name": "static-site-generator",
  "version": "0.1.0",
  "description": "A very simple tool to generate static websites based on html and markdown source files",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "lint": "eslint \"src/**\"",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm run build && npm run test"
  },
  "bin": {
    "static-site-generator": "dist/cli.js"
  },
  "author": "Bronley Plumb",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.1",
    "debounce": "^1.2.1",
    "ejs": "^3.1.6",
    "finalhandler": "^1.1.2",
    "front-matter": "^4.0.2",
    "globby": "^11.0.3",
    "highlight.js": "^10.7.2",
    "marked": "^2.0.3",
    "serve-static": "^1.14.1",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/debounce": "^1.2.0",
    "@types/ejs": "^3.0.6",
    "@types/finalhandler": "^1.1.0",
    "@types/fs-extra": "^9.0.11",
    "@types/marked": "^2.0.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@types/serve-static": "^1.13.9",
    "@types/sinon": "^10.0.0",
    "@types/yargs": "^16.0.1",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
